<i class="fas fa-beer"></i><%= link_to " Make a drink!", new_drink_path(@drink), class: "drink-link" %><br>
<i class="fas fa-beer"></i><%= link_to " See all drinks!", drinks_path, class: "drink-link" %><br>
<i class="fas fa-beer"></i><%= link_to " Your account!", @user, class: "drink-link" %>
